<aura:component description="weather" controller="WeatherLocator">
    <aura:attribute name="cityInfo" type="CityWeather__c"/>
    <aura:attribute name="choosedCity" type="String" default="Minsk,by"/>

    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>

    <lightning:input label="Choose City" type="text"
                     name="cardName" placeholder="London,uk" maxlength="16"
                     value="{!v.choosedCity}"
                     required="true"/>
    <lightning:button variant="brand"
                      label="Press"
                      title="Press"
                      onclick="{!c.doInit}"/>

    <lightning:formattedNumber value="{!v.cityInfo.Name}"/>
    <h1 class="slds-text-heading--label">Expenses</h1>
    <h1>{!v.cityInfo.Name}</h1>

</aura:component>